@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=>item.PricingID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.VetNationalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TuitionFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaterialFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricingComment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PricingID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PricingID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PricingID })
        </td>
    </tr>

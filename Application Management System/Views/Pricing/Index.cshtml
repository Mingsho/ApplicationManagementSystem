@model IEnumerable<Application_Management_System.Models.Pricing>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<hr />

<div>
    @Html.ActionLink("Create New", "Create")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.PricingID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.VetNationalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TuitionFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialFee)
        </th>
